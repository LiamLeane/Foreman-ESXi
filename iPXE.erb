#!ipxe
<%#
kind: iPXE
name: ESXi iPXE
oses:
- ESXi 5
- ESXi 5.5
- ESXi 6
%>

kernel -n mboot.c32 <%= @host.operatingsystem.medium_uri(@host) %>mboot.c32
imgargs mboot.c32 -c <%= @host.operatingsystem.medium_uri(@host) %>boot.cfg text ks=<%=foreman_url("provision")%>; ignoreHeadless="True"
boot mboot.c32